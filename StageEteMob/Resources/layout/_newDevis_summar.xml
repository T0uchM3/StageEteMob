<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_main"
	android:id="@+id/relativeLayInc"
	android:minWidth="25px"
	android:minHeight="25px">
	<RelativeLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/relativeLayout1"
		android:layout_marginBottom="10dp">

		<ImageButton
			android:src="@drawable/backarrow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:scaleType="fitCenter"
			android:id="@+id/goback"
			android:pointerIcon="none"
			android:layout_marginLeft="30px"
			android:layout_marginTop="15px"
			android:background="#ffffffff" />

	</RelativeLayout>
	<RelativeLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/relativeLayout2"
		android:layout_below="@id/relativeLayout1">

		<LinearLayout
			android:orientation="vertical"
			android:layout_below="@id/relativeLayout1"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/linearLayout1"
			android:layout_marginTop="10px">

			<TextView
				android:text=""
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/devisNameTV"
				android:layout_marginBottom="10px"
				android:textAlignment="center"
				android:textColor="#ff222222" />
			<TextView
				android:text="Client :"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="30px"
				android:textColor="#ff222222"
				android:id="@+id/clientNameTV"
				android:layout_marginBottom="10px" />
			<TextView
				android:text="x Articles"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/articleCountTV"
				android:textAlignment="viewEnd"
				android:textColor="#ff222222"
				android:layout_marginRight="30px"
				android:textSize="40px" />

			<androidx.recyclerview.widget.RecyclerView
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_width="match_parent"
				android:layout_height="301.5dp"
				android:id="@+id/finalArticleRV"
				android:fadingEdge="none"
				android:layout_marginTop="20px"
				android:paddingTop="5dp"
				android:background="#ffE9E9E9" />



		</LinearLayout>
		<Button
			android:text="Confirm"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:id="@+id/button1"
			android:background="#ff222222" />
	</RelativeLayout>


</RelativeLayout>
