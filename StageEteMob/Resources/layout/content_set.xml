<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_main"
	android:id="@+id/relativeLayInc"
	android:minWidth="25px"
	android:minHeight="25px">

	<LinearLayout
		android:orientation="vertical"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="20px"
		android:paddingRight="20px"
		android:id="@+id/linearLayout1">
		<TextView
			android:text="Create a client"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/textView1"
			android:textSize="25sp"
			android:textStyle="normal"
			android:paddingTop="30px"
			android:paddingBottom="50px"
			android:textColor="#ff222222"
			android:textAlignment="center" />
		<TextView
			android:text="Client Name"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#ff222222"
			android:id="@+id/clientNameTV" />

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/nomTF"
			android:hint="ex: Ali"
			android:theme="@style/MyEditTextTheme"
			android:textColorHint="#ffacacac"
			android:layout_marginBottom="40px" />
		<TextView
			android:text="Client Mail"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#ff222222"
			android:id="@+id/clientMailTV" />

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/mailTF"
			android:hint="ex: Ali@gmail.com"
			android:theme="@style/MyEditTextTheme"
			android:textColorHint="#ffacacac"
			android:layout_marginBottom="40px" />
		<TextView
			android:text="Client Phone number"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#ff222222"
			android:id="@+id/clientPNTV" />
		<EditText
			android:layout_width="match_parent"
			android:layout_height="54.5dp"
			android:id="@+id/telTF"
			android:hint="ex: 27215300"
			android:theme="@style/MyEditTextTheme"
			android:textColorHint="#ffacacac"
			android:layout_marginBottom="40px"/>
		<TextView
			android:text="Client Location"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#ff222222"
			android:id="@+id/clientLocTV" />
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/paysTF"
			android:hint="ex: Tunisie"
			android:theme="@style/MyEditTextTheme"
			android:textColorHint="#ffacacac"
			android:layout_marginBottom="50px"/>

		<com.google.android.material.button.MaterialButton
			android:layout_width="match_parent"
			android:text="ADD"
			android:layout_height="50.0dp"
			android:textAllCaps="false"
			android:id="@+id/materialButton1" />


	</LinearLayout>






</RelativeLayout>
